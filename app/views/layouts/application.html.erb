<!DOCTYPE html>
<html>
  <head>
    <title>Huddl</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class='nav navbar navbar-expand'>
      <a href='/' class='navbar-brand'><%= image_tag('penguin.png', :alt => 'penguin', class: 'icon') %></a>
      <ul class='navbar-nav mr-auto mt-2 mt-md-0'>
        <li class='nav-item nav-item-link'><%= link_to 'New Chat', chats_path, method: :post %></li>
        <li class='nav-item nav-item-link'><%= link_to 'My Chats', chats_path %></li>
        <li class='nav-item nav-item-link'>About</li>
      </ul>
      <ul class='navbar-nav'>
        <% if !user_signed_in? %>
          <li class='nav-item nav-item-link'><%= link_to 'Sign In', new_user_session_path %></li>
          <li class='nav-item nav-item-link'><%= link_to 'Sign Up', new_user_registration_path %></li>
        <% else %>
          <li class='nav-item nav-item-link'><%= link_to 'My Profile', user_path(current_user) %></li>
          <li class='nav-item nav-item-link'><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
        <% end %>
      </ul>
    </nav>

    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
